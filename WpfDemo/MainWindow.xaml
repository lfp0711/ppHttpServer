<Window x:Class="WpfDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDemo"
        mc:Ignorable="d"
        Title="Demo" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Background="AliceBlue">
            <Button Content="Start" Name="Start" Margin="5" Click="Start_Click"></Button>
            <Button Content="Stop" Name="Stop" Margin="5" Click="Stop_Click"></Button>
        </StackPanel>
        <Border BorderThickness="2" BorderBrush="Black" Grid.Column="1">
            <TextBlock Grid.Column="1" Margin="5" Name="LogTextBlock" TextWrapping="Wrap" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            </TextBlock>
        </Border>

    </Grid>
</Window>
